<GraphCustom>:

<MainScreen>
	orientation: 'vertical'
    BoxLayout:
    	size_hint_y: None
		height: 50
    	orientation: 'horizontal'
		Button:
			text: "ON"
			background_color: 0.3, 0.3, 0.3, 1
			on_press: root.on()
		Button:
			text: "OFF"
			background_color: 0.3, 0.3, 0.3, 1
			on_press: root.off()
	BoxLayout:
    	size_hint_y: None
		height: 50
    	orientation: 'horizontal'
		Button:
			text: "Set Voltage"
			background_color: 0.3, 0.3, 0.3, 1
			on_press: root.setVoltage()
		Button:
			text: "Set Current"
			background_color: 0.3, 0.3, 0.3, 1
			on_press: root.setCurrent()
	BoxLayout:
    	size_hint_y: None
		height: 50
    	orientation: 'horizontal'
		FloatInput:
			padding: [10, (self.height - self.line_height) / 2]
			text: "0"
		FloatInput:
			padding: [10, (self.height - self.line_height) / 2]
			text: "0"
    GraphCustom:
		size: self.parent.size
		pos: self.parent.pos
		ylabel: 'Voltage (V)'
	GraphCustom:
		size: self.parent.size
		pos: self.parent.pos
		ylabel: 'Current (Amps)'
	BoxLayout:
    	size_hint_y: None
		height: 50
    	orientation: 'horizontal'
		Label:
			id: volt_meas
			markup: True
			text: "[b]Voltage Measurement [color=#008000]0[/color] V[/b]"
		Label:
			id: curr_meas
			markup: True
			text: "[b]Current Measurement [color=#008000]0[/color][/b]"
